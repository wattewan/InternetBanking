        footer{
            font-size: 18px;
            text-align: right;
            width: 100%;
            position: fixed;
            bottom: 0;
            background: rgba(0, 0, 0, 0.2) !important;
            opacity: 0.9;
        }
        .ham{
            border: solid orange;
            border-radius: 3px;
        }
        .ham button{
            position: fixed;
            right: 1%;
            top: 1%;
            background: linear-gradient(40deg,#ffd86f, #ffbf00)!important;
        }
        .col-ms-4 button{
            background: gold;
        }
        .col-ms-4 input{
            height: 100%;
            background: wheat;
            border: 1px solid #dddddd;
            box-sizing:border-box;
            border-radius: 8px;
        }
        .col-ms-4{
            margin-right: 10px;
        }
        .navbar {
            text-transform: uppercase;
            font-weight: 700;
            font-size: .9rem;
            letter-spacing: .1rem;
            background: rgba(0, 0, 0, 0.2) !important;
        }
        .navbar-brand img{
            height: 3rem;
        }
        .navbar-nav li{
            padding-right: .7rem;
        }
        .navbar-dark .navbar-nav .navbar-link {
            color: gold;
            padding-top: .8rem;
        }
        .navbar-dark .navbar-nav .nav-link.active,
        .navbar-dark .navbar-nav .nav-link:hover {
            color: goldenrod;
        }
    </style>
    <div class="collapse sidenav-collapse" id="sidenav">
        {{> navbar}}
        {{> nav_format}}
